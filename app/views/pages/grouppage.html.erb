<div class = "sidebyside">
  <div class = "group-list">
    <% i = 0 %>
    <% @groups.each do |group| %>
    <p id = "<%=(i+1).to_s%>" class = "aGroup"><%= group.name %></p>
    <% i+= 1 %>
    <% end %>
  </div>


  <div class="card-stack">
    <div class="card-list">
      <% for i in 0..(@groups.length - 1)%>
      <div class="card" id = "<%= "card-" + (i+1).to_s %>" style="background-color:<%= Group.colorGen(i) %>;">
        <% @groups[i].users.each do |user| %>
        <p><%= user.name %></p>
        <% end %> <br>
      </div>
      <%end %>
    </div>
  </div>
</div>



<div>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#tribeModal">
    Create a tribe
  </button>
</div>
<!-- Modal -->
<%= form_for Group.new do |g| %>
<div class="modal fade" id="tribeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Tribe</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <%= g.label :name %>
        <%= g.text_field :name, :required => true, :class => "form-field"%>

        <%= g.hidden_field :admin_id, :value => current_user.id %>
      </div>
      <div class="modal-footer">
        <%= g.submit "Create", class: "btn btn-primary"%>
      </div>

    </div>
  </div>
</div>
<% end %>
<%= form_for Invite.new, :url => 'invite#create' do |f| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<!--<%= f.label :group_id %>
<%= f.number_field :group_id %>-->
<%= f.collection_select(:group_id, Group.joins(:memberships).where(memberships: {user_id: current_user.id}), :id, :name) %>
<%= f.label :email %>
<%= f.email_field :email %>
<%= f.submit %>
<% end %>
