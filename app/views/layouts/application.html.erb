<!DOCTYPE html>
<html>
  <head>
    <title>ScheduleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="global_nav">
        <ul>
          <li><h1><%= link_to " Corral ", root_path, class: 'linkseffect', data: {turbolinks: 'false'} %></h1></li>
            <li class='topPadding'><%= link_to " Events ", '/eventpage', class: 'linkseffect', data: { turbolinks: 'false'} %></li>
            <li class='topPadding'> <%= link_to " Groups ", '/grouppage', class: 'linkseffect' %> </li>
            <% if current_user %>
              <li class='topPadding'> <%= link_to " Logout ", logout_path, method: 'delete', class: 'linkseffect' %> </li>
            <% end %>
        </ul>
    </nav>
  </header>


    <%= yield %>
  </body>
</html>
